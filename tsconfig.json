{
  "compilerOptions": {
    "outDir": "./build",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "lib": [
      "esnext"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "declaration": true,
    "resolveJsonModule": true
  }
}